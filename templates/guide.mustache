{{!
    @template report_advancedgrading/guide
    Template for rendering marking guide report output
    Example context (json):
    {
        "header": [
            {
                "coursename": "public-tab",
                "assignment": "Public comments",
                "gradingmethod": "Public comments' content",
                "definition": "Marking Guide Criteria"
            }
        ]
    }
}}

<div>
<table class="table table-bordered table-striped">
    <thead>
        {{#header}}
        <tr>
            <th>
                <b>{{#str}}course{{/str}}:{{coursename}}</b>
            </th>
        </tr>
        <tr>
            <th>
              <b>{{#str}}assignment, report_advancedgrading {{/str}}:{{assignment}}</b>
            </th>
        </tr>
        <tr>
            <th>
               <b>{{#str}}grademethod,report_advancedgrading{{/str}}:{{gradingmethod}}</b>
            </tr>
            <tr>
            <th>
              <b>{{definition}}</b>
            </th>
        </tr>
        {{/header}}
    </thead>
</table>

<table  id="rubric-header" class="table table-hover table-bordered table-striped" >
    <thead>
     <tr>
            <th {{{studentspan}}}>
                {{#str}}student, report_advancedgrading{{/str}}
            </th>
            {{#criteria}}
            <th colspan="2" class="align-top">{{description}}</th>
            {{/criteria}}
            <th colspan="4">{{#str}}gradesummary, report_advancedgrading{{/str}}</th>
    </tr>

    </thead>
    <tbody>
        {{{rows}}}
    </tbody>
</table>
</div>
