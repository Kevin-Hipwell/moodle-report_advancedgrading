<table id="rubric-header"  class="table table-bordered">
<tbody>
    <tr>
        {{#header}}
        <td colspan = {{studentcolspan}}>
            {{#str}}course{{/str}}:{{coursename}}
        </td>
    </tr>
    <tr>
        <td colspan = {{studentcolspan}} >
            {{#str}}assignment, report_advancedgrading {{/str}}:{{assignment}}
        </td>
    </tr>

    <tr>
        <td colspan = {{studentcolspan}} >
            {{#str}}grademethod,report_advancedgrading{{/str}}:{{gradingmethod}}
            </td>
        <tr>
            <td colspan = {{studentcolspan}} >
                {{definition}}
            </td>
        </tr>
        {{/header}}
    </tr>
    <tr>
        <td colspan = 3>
            <b>Student</b>
        </td>
        {{#criteria}}
            <td colspan=2 class="criteriaheader">{{description}}</td>
        {{/criteria}}
        <td colspan=2 class="infoheader">Grading Info</td>
    </tr>
    <tr>
        <td>
            <b>Firstname</b>
        </td>
        <td>
            <b>Lastname</b>
        </td>
        {{#showidnumber}}
            <td><b>Id Number</b></td>
        {{/showidnumber}}
        {{#criteria}}
            <td class="criteriaheader">Score</td>
            <td class="criteriaheader">Feedback</td>
        {{/criteria}}
        <td class="infoheader"> Graded by </td>
        <td class="infoheader"> Time Graded </td>
    </tr>
